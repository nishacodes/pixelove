<div class="box">
		
		<!-- TITLE SECTION -->
		<div id="titlesection">
				<div id="title">
					<h3 class="title">
						<%= pin.description %>
					</h3>	
				</div>
				<div class="actionbuttons">
						<div class="addbutton"> <%= image_tag "addbw.png" %> </div>
						<div class="heartbutton"><%= image_tag "heartbw.png" %> </div>
				</div>
		</div>
		
		<!-- SCREENSHOT and ARROWS -->
		<div id="myCarousel" class="carousel slide">
		  <!-- <ol class="carousel-indicators">
		    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		    <li data-target="#myCarousel" data-slide-to="1"></li>
		    <li data-target="#myCarousel" data-slide-to="2"></li>
		  </ol> -->
		  <!-- Carousel items -->
		  <div class="carousel-inner">
		    <div class="active item"><%= link_to (image_tag pin.image(:medium)), pin %></div>
		    <div class="item"><%= link_to (image_tag pin.image(:medium)),  pin %></div>
		    <div class="item"></div>
		  </div>
		  <!-- Carousel nav -->
		  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
		</div>


		<div class="screenshot">
			<%= link_to (image_tag pin.image(:medium)), pin %>

			
				<div class="leftarrow">
					<%= image_tag 'leftarrow.png' %>
				</div>	
				<div class="rightarrow">
					<%= image_tag 'rightarrow.png' %>
				</div>	
			
		</div>


		<!-- PIN DETAILS-->
		<div class="pindetails">
				
				
				<div class="tagarea">
					<p class="tag_list">
						<i class="icon-tag"></i>
						<%= raw pin.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
					</p>
				</div>
				<div class="usericon">
					<div class="profilephoto">
					</div>
				 	<%= pin.user.name %>
				</div>
					<div class="categoryname">
						<%= raw pin.category_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
					</div>

				
				<!-- EDIT AND DELETE BUTTONS
				<% if current_user == pin.user %>
					<p>
						<%= link_to 'Edit', edit_pin_path(pin) %>
						<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
					</p>
					
				<% end %>
				 -->
				
		</div>
</div>